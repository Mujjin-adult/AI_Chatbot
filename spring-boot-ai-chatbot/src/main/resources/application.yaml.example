spring:
  application:
    name: "Spring Boot ChatBot"
  ai:
    openai:
      api-key: ${GROQ_API_KEY}
      base-url: "https://api.groq.com/openai"
      chat:
        options:
          model: "llama-3.1-8b-instant"
          temperature: "0.7"

# 환경 변수 설정 방법:
# 1. 로컬 실행: export GROQ_API_KEY=your_api_key_here
# 2. Docker: docker-compose.yaml에서 environment 섹션에 추가
# 3. API 키는 https://console.groq.com 에서 발급받을 수 있습니다

