version: '3.8'

services:
  springboot-app:
    build: 
      context: ./spring-boot-ai-chatbot
      dockerfile: Dockerfile
    ports:
      - "8080:8080"
    environment:
      - GROQ_API_KEY=your_groq_api_key_here
    networks:
      - app-network

  react-ui:
    build: 
      context: ./chatbot-ui
      dockerfile: Dockerfile
    ports:
      - "3000:80" # Serving on port 3000 (Nginx default port 80)
    networks:
      - app-network

networks:
  app-network:
    driver: bridge

# 사용 방법:
# 1. GROQ_API_KEY를 실제 API 키로 변경
# 2. docker-compose up --build 실행

